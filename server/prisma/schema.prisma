// server/prisma/schema.prisma

generator client {
  provider = "prisma-client-js" 
  //removi o 'output' para ele salvar no node_modules padrão e parar de dar erro de import
}

datasource db {
  provider = "postgresql"//mudei para postgres para subir no banco
  url      = env("DATABASE_URL") // <--- Adicione esta linha
  //mantive Postgres (ideal pro Render), mas se quiser rodar local sem docker, muda pra "sqlite"
}

model User {
  id        String   @id @default(uuid())
  username  String   @unique
  email     String   @unique
  password  String

  isAdmin   Boolean  @default(false)
  isBanned  Boolean  @default(false)

  createdAt DateTime @default(now())

  // relações 1:N – não colocar onDelete aqui!
  messages     Message[]
  createdRooms Room[]    @relation("RoomCreator")
  joinedRooms  Room[]
}

model Room {
  id          String    @id @default(uuid())
  name        String    @unique
  description String?
  createdAt   DateTime  @default(now())

  creatorId   String
  creator     User      @relation("RoomCreator", fields: [creatorId], references: [id], onDelete: Cascade)

  messages    Message[]

  usersInRoom User[]
}

model Message {
  id        String   @id @default(uuid())
  content   String
  createdAt DateTime @default(now())
  edited    Boolean  @default(false)

  // FK → User
  senderId  String
  sender    User     @relation(fields: [senderId], references: [id], onDelete: Cascade)

  // FK → Room
  roomId    String
  room      Room     @relation(fields: [roomId], references: [id], onDelete: Cascade)

  isPrivate  Boolean @default(false)
  receiverId String?
}