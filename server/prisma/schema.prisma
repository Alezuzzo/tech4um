// server/prisma/schema.prisma

generator client {
  provider = "prisma-client-js" 
  //removi o 'output' para ele salvar no node_modules padr√£o e parar de dar erro de import
}

datasource db {
  //mantive Postgres (ideal pro Render), mas se quiser rodar local sem docker, muda pra "sqlite"
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  username  String   @unique // o front manda 'username'
  email     String   @unique
  password  String   
  
  createdAt DateTime @default(now())

 //relacoes para o chat
  messages     Message[]
  createdRooms Room[]    @relation("RoomCreator")
}

model Room {
  id          String    @id @default(uuid())
  name        String    @unique
  description String?
  createdAt   DateTime  @default(now())
  
  //quem criou a sala
  creatorId   String
  creator     User      @relation("RoomCreator", fields: [creatorId], references: [id])

  //mensagens da sala
  messages    Message[]
}

model Message {
  id        String   @id @default(uuid())
  content   String
  createdAt DateTime @default(now())
  
  // quem mandou
  senderId  String
  sender    User     @relation(fields: [senderId], references: [id])

  roomId    String
  room      Room     @relation(fields: [roomId], references: [id])

  // suporte a Mensagem Privada
  isPrivate  Boolean @default(false)
  receiverId String?
}